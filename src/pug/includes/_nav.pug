nav.navbar.navbar-toggleable-lg.navbar-inverse.bg-suiranfes.bgimg-n
  button.navbar-toggler.navbar-toggler-right(type="button", data-toggle="collapse", data-target="#navbar", aria-controls="navbar", aria-expanded="false", aria-label="Toggle navigation")
    span.navbar-toggler-icon
  a.navbar-brand.fw-800(href="/")
    +ft("ths-takasakihs")
    | #{site.title}
  div.collapse.navbar-collapse(id="navbar")
    ul.navbar-nav
      - for (var i in site.pages) {
      -   if ( i != 0 && site.pages[i].name != "404") {
        if (site.pages[i].enable)
          if (site.pages[i].children)
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="javascript:void(0)", id=`navbar_drop_${site.pages[i].name}`, data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                | #{site.pages[i].title}
              .dropdown-menu(area_labelledby=`navbar_drop_${site.pages[i].name}`)
                each child, j in site.pages[i].children
                  if(site.pages[i].children[j].enable)
                    a.dropdown-item(href=`/${site.pages[i].name}${child.add}`) #{child.title}
                  else
                    a.dropdown-item.disabled(href=`javascript:void(0)`) #{child.title}
          else if (site.pages[i].name == page.id)
            li.nav-item
              a.nav-link.active.fw-500(href=`javascript:void(0)`)
                +fa('chevron-circle-right')
                | #{site.pages[i].title}
          else
            li.nav-item
              a.nav-link(href=`/${site.pages[i].name}`) #{site.pages[i].title}
        else
          li.nav-item
            a.nav-link.disabled(href="javascript:void(0)") #{site.pages[i].title}
      -   }
      - }
      if (page.id == "index")
        - for (var i in site.pages) {
        -   if ( i != 0 && site.pages[i].name != "404") {
        - if(!url_all){
        -     url_all=""
        - }
        - url_all += "/" + site.pages[i].name + "\n"
          if (site.pages[i].children)
            each child, j in site.pages[i].children
              - url_all += "/" + site.pages[i].name + child.add + "\n"
        -   }
        - }
